{
    "compilerOptions": {
        "declaration": false,
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false,
        "suppressImplicitAnyIndexErrors": true,
        "typeRoots": [
            "./node_modules/@types"
        ],
        "types": [
          "core-js",
          "node",
          "lodash",
          "jasmine",
          "supertest",
          "proxyquire",
          "socket.io",
          "socket.io-client",
          "hammerjs",
          "mongoose"
        ]
    },
    "compileOnSave": false,
    "exclude": [
      "./dist",
      "./node_modules",
      "./scripts",
      "./server",
      "./config"
    ]
}
