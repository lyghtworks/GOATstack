/*
  Angular Compiler-cli as of 2.1.2 looks for shim files inside app directory
  regardles of genDir
*/

{
  "compilerOptions": {
    "declaration": false,
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "ngc-aot/tsc",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "files": [
    "app/app.module.ts",
    "app/main.ts"
  ],
   "angularCompilerOptions": {
     "skipMetadataEmit" : true
  }
}
