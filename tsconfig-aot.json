{
  "compilerOptions": {
    "declaration": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "mapRoot": "./",
    "module": "system",
    "moduleResolution": "node",
    "outDir": "dist/app",
    "outFile": "app.js",
    "sourceMap": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules"
  ],
   "angularCompilerOptions": {
     "genDir": "dist",
     "skipMetadataEmit" : true
  }
}
